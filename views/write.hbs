
{{#section 'pageTitle'}}
    <title>Write a story</title>
{{/section}}

<header class="container">
    <div class="row">
        <h1>Write a story</h1>
    </div>
</header>

<div class="container">
    <form name="writeForm" method="POST" action="publishStory">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="A compelling story title" />
        </div>
        <div class="form-group">
            <label  for="subTitle">Subtitle:</label>
            <input type="text" class="form-control" id="subtitle" name="subTitle" placeholder="A short subtitle for story" />
        </div>
        <div class="form-group">
            <label  for="content">Story Content:</label>
            <textarea class="form-control" id="content" rows="10" name="content" placeholder="Your story"></textarea>
        </div>
        <div class="form-group">
            <label  for="keywords">Keywords:</label>
            <input type="text" class="form-control" id="keywords" name="keywords" placeholder="Keywords are separated by commas. Eg, Apple, fruit, frog" />
        </div>
        <div class="form-group">
            <label for="datePosted">Date posted:</label>
            <input type="date" class="form-control" id="datePosted" disabled="true" name="datePosted" />
        </div>
        <button type="submit">Publish story!!!</button>

    </form>
</div>


{{#section 'pageScripts'}}
    <script src="/scripts/write.js"></script>
{{/section}}