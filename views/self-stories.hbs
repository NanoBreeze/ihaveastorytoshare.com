
{{#section 'pageTitle'}}
    <title>My stories</title>
{{/section}}

<header class="container">
	<div class="row">
		<h1>My stories</h1>
	</div>
</header>

<div class="container">
    <h2>Published stories</h2>
	<div class="row">
		{{#each publishedStoryPreviews}}
		<div class="col-sm-4 col-md-3 ">
			{{> storyPreview this}}
		</div>
		{{/each}}
	</div>
</div>

<div class="container">
    <h2>Saved stories</h2>
    <div class="row">
        {{#each savedStoryPreviews}}
            <div class="col-sm-4 col-md-3">
                {{> storyPreview this}}
            </div>
        {{/each}}
    </div>
</div>